#!/usr/bin/env bash
prev_mtime=0
while true; do
	sleep 0.1
	script="$(ls -1 -rt | tail -n 1)"
	[[ -x "$script" ]] || continue
	if [[ "$OSTYPE" =~ .*darwin.* ]]; then
		mtime="$(stat -f %m "$script")"
	else
		mtime="$(stat -c %Y "$script")"
	fi
	((mtime==prev_mtime)) && continue
	run-once "$script"
	prev_mtime="$mtime"
done
